### keys
set {
    # logo key (super)
    $mod Mod1

    # direction keys
    $left h
    $down j
    $up k
    $right l
}

### vars
set {
    # terminal
    $term foot

    #discord
    $discord webcord --ozone-platform=wayland
    
    # browser
    $browser firefox
    
    # swaylock
    $screenlock swaylock -f -c 555555
}

### visuals
# desktop wallpaper
output * bg ~/Media/tile.png tile #555555

# display output
output HDMI-A-1 resolution 1920x1080 position 0,0
output DP-1 resolution 3840x2160 position 1920,0 scale 2

# borders
default_border pixel 2
#smart_borders on
gaps inner 4
gaps outer 4

# move floating window with mouse
floating_modifier $mod

# window colors
set $black  #000000
set $white  #ffffff
set $red    #ff0000
set $blue   #123987

#class                      border  bkgrnd  text    indi    childbdr
client.focused              $red    $red    $white  $red    $red
client.focused_inactive     $black  $black  $white  $black  $black
client.unfocused            $black  $black  $white  $black  $black
client.urgent               $blue   $black  $white  $black  $blue
client.placeholder          $blue   $black  $white  $black  $blue

# hide inactive cursor
seat * hide_cursor 100000

### swayidle
exec swayidle -w \
        timeout 900 '$screenlock' \
        timeout 1200 'swaymsg "output * dpms off"' \
            resume 'swaymsg "output * dpms on"' \
        before-sleep '$screenlock'

### bindings
bindsym {
    # movement and focus
    $mod+$left focus left
    $mod+$down focus down
    $mod+$up focus up
    $mod+$right focus right
    # with arrow keys
    $mod+Left focus left
    $mod+Down focus down
    $mod+Up focus up
    $mod+Right focus right

    # move the focused window
    $mod+Shift+$left move left
    $mod+Shift+$down move down
    $mod+Shift+$up move up
    $mod+Shift+$right move right
    # with arrow keys 
    $mod+Shift+Left move left
    $mod+Shift+Down move down
    $mod+Shift+Up move up
    $mod+Shift+Right move right

    # object focus split direction 
    $mod+v splitt

    # switch the current container between different layout styles
    $mod+s layout stacking
    $mod+w layout tabbed
    $mod+e layout toggle split

    # make the current focus fullscreen
    $mod+f fullscreen

    # toggle between borders
    $mod+a border toggle

    # toggle the current focus between tiling and floating mode
    $mod+Shift+space floating toggle

    # swap focus between the tiling area and the floating area
    $mod+space focus mode_toggle

    # kill focused window
    $mod+Shift+q kill

    # tab between previous workspace
    $mod+Tab workspace back_and_forth

    # reload sway
    $mod+Shift+c reload

    # exit sway
    $mod+Shift+e exit

    ### run bidings
    # start terminal
    $mod+Return exec $term
    
    # start browser
    $mod+z exec $browser

    # start discord
    $mod+d exec $discord

    # lock screen
    $mod+t exec $screenlock
}

### workspaces
bindsym {
    # switch workspace
    $mod+1 workspace number 1
    $mod+2 workspace number 2
    $mod+3 workspace number 3
    $mod+4 workspace number 4
    $mod+5 workspace number 5
    $mod+6 workspace number 6
    $mod+7 workspace number 7
    $mod+8 workspace number 8
    $mod+9 workspace number 9
    $mod+0 workspace number 10
    
    # move focused container to workspace
    $mod+Shift+1 move container to workspace number 1
    $mod+Shift+2 move container to workspace number 2
    $mod+Shift+3 move container to workspace number 3
    $mod+Shift+4 move container to workspace number 4
    $mod+Shift+5 move container to workspace number 5
    $mod+Shift+6 move container to workspace number 6
    $mod+Shift+7 move container to workspace number 7
    $mod+Shift+8 move container to workspace number 8
    $mod+Shift+9 move container to workspace number 9
    $mod+Shift+0 move container to workspace number 10
}

mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 100px
    bindsym $down resize grow height 100px
    bindsym $up resize shrink height 100px
    bindsym $right resize grow width 100px

    # Ditto, with arrow keys
    bindsym Left resize shrink width 100px
    bindsym Down resize grow height 100px
    bindsym Up resize shrink height 100px
    bindsym Right resize grow width 100px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

bar {
    position top
    font pango:Lilex 10
    separator_symbol |
    status_command while ~/.config/sway/status.sh; do sleep 20; done

    colors {
        statusline $white
        background $black
    }
}

# needed for screen-capture on wayland
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
